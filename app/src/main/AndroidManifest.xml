<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pablotrescoli.londonrunner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name="com.example.pablotrescoli.londonrunner.main.MainMenu"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.pablotrescoli.londonrunner.clubs.AthleticsClubsDisplay"/>

        <activity android:name="com.example.pablotrescoli.londonrunner.main.TracksMenu"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.pablotrescoli.londonrunner.main.ParkrunMenu"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.pablotrescoli.londonrunner.main.LondonRunnerDetailedItemDisplayer"/>

        <activity android:name="com.example.pablotrescoli.londonrunner.parkrun.ResultsDisplay"/>

        <activity android:name="com.example.pablotrescoli.londonrunner.parkrun.RegisterNewUser"/>

        <activity android:name="com.example.pablotrescoli.londonrunner.parkrun.ResultsRequest"/>

        <activity android:name="com.example.pablotrescoli.londonrunner.parkrun.WhatIsParkrun"/>

        <activity android:name="com.example.pablotrescoli.londonrunner.tracks.OutdoorTracksDisplay"/>

        <activity android:name="com.example.pablotrescoli.londonrunner.tracks.OutdoorTracksDisplayByDistance"/>

        <activity android:name="com.example.pablotrescoli.londonrunner.tracks.IndoorTracksDisplay"/>

        <activity android:name="com.example.pablotrescoli.londonrunner.tracks.IndoorTracksDisplayByDistance"/>

    </application>

</manifest>